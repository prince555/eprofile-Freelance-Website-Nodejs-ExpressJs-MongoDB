  <form action="/card" method="post"  role="form" enctype="multipart/form-data">
                                   
    <center><p class="name">Welcome <%= user.name %></p></center>

    <% if(success !=''){%>
      <div class="alert alert-success">
        <a class="alert-link"><%= success %></a>.
      </div><br>
      <% } %>

    <center><img class="img" src="../uploadings/<%= records.imagename %>" height="250px;" width="200px"></center><br>
    <center><h5 style="color: white;">Anyone can view your profile, just share your profile link after filling all the details.</h5></center>
                                        
    <div class="form-group">
        <label style="color: white;" for="file" class="col-md-3 control-label">Upload Photo</label>
        <div class="col-md-9">
            <input type="file" class="form-control" name="imagename" required>
        </div>
    </div>
    

    <div class="form-group">
        <!-- Button -->                                        
        <div class="col-md-offset-3 col-md-9">
        <input type="submit" name="submit" value="Upload" class="btn btn-primary">   
        </div>
    </div><br>
    <a style="float: right; margin-right: 20px; padding: 20px; font-size:30px;" href="/personal">next</a>
    
</form>

  

</div>
</body>
</html>